// Program to calculate the energy needed to heat water

// Prompt the user for input
let waterMass = parseFloat(prompt("Enter the amount of water in kilograms:"));
let initialTemperature = parseFloat(prompt("Enter the initial temperature of the water in Celsius:"));
let finalTemperature = parseFloat(prompt("Enter the final temperature of the water in Celsius:"));

// Calculate the energy required
let Q = waterMass * (finalTemperature - initialTemperature) * 4184;

// Display the result
alert("The energy needed to heat the water is " + Q + " Joules.");
console.log("The energy needed to heat the water is " + Q + " Joules.");
